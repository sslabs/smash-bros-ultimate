<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context=".ui.welcome.SplashView">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/splash_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.42"/>

    <ImageView
        android:layout_width="@dimen/logo_side"
        android:layout_height="@dimen/logo_side"
        app:srcCompat="@drawable/app_logo"
        app:layout_constraintTop_toTopOf="@id/splash_guideline"
        app:layout_constraintBottom_toBottomOf="@id/splash_guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/app_name" />
</androidx.constraintlayout.widget.ConstraintLayout>